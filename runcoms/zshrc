# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Source Aliases
if [[ -s "${ZDOTDIR:-$HOME}/.zaliases" ]]; then
  source "${ZDOTDIR:-$HOME}/.zaliases"
fi

# Source Functions
if [[ -s "${ZDOTDIR:-$HOME}/.zfunctions" ]]; then
  source "${ZDOTDIR:-$HOME}/.zfunctions"
fi

# Source Perl
if [[ -s "${ZDOTDIR:-$HOME}/.zperl" ]]; then
  source "${ZDOTDIR:-$HOME}/.zperl"
fi

# Source Macaulay2
if [[ -s "${ZDOTDIR:-$HOME}/.macaulay2.sh" ]]; then
  source "${ZDOTDIR:-$HOME}/.macaulay2.sh"
fi
